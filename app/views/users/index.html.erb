<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td>
          <% if current_user %>
          <% if current_user.admin %>
            <% unless user.active %>
              <button class="btn btn-primary; pointer-events: none">account frozen</button>
            <% end %>
          <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New User', new_user_path, class:"btn btn-primary" ) if current_user %>
