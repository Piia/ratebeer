<p id="notice"><%= notice %></p>

<p>
  <h2><%= @style.name %></h2>
</p>

<p>
  <%= @style.description %>
</p>

<p>
  <% if @style.ratings.empty? %>
    Beers of this style have not yet been rated!
  <% else %>
    Has <%= pluralize(@style.ratings.count, "rating") %>, average <%= round(@style.average_rating) %>
  <% end %>

</p>

<p> Number of beers: <%= @style.beers.count %> </p>
<p>
  <div class="list-group">
 <% @style.beers.each do |beer| %>
      <button type="button" class="list-group-item"><%= link_to beer.name, beer_path(beer.id) %></button>
 <% end %>
  </div>
</p>

<p>
  <% if @style.ratings.empty? %>
    Beers of this style have not yet been rated!
  <% else %>
    Has <%= pluralize(@style.ratings.count, "rating") %>, average <%= round(@style.average_rating) %>
  <% end %>

</p>

<%= edit_and_destroy_buttons(@style) %>